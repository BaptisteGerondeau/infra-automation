[Unit]
Description=mr-provisioner http backend
Requires=network-online.target
Requires=mr-provisioner-ws.service
After=network-online.target

[Service]
# Override log level specified in config.ini
Environment=APP_LOG_LEVEL=INFO
ExecStart={{mr_provisioner_venv_path}}/bin/mr-provisioner -c /etc/mr-provisioner.ini runserver -h 0.0.0.0 -p 5000

Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
